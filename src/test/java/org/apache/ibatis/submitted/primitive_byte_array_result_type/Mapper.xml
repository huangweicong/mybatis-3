<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.submitted.primitive_byte_array_result_type.Mapper">

  <insert id="insert">
    insert into users(id, bin, varbin)
    values(#{id}, #{bin}, #{varbin});
  </insert>

  <select id="getBin" resultType="_byte[]">
    select bin from users
    where id = #{id}
  </select>

  <select id="getVarBin" resultType="_byte[]">
    select varbin from users
    where id = #{id}
  </select>

  <select id="getAllBin" resultType="_byte[]">
    select bin from users
  </select>

  <select id="getAllVarBin" resultType="_byte[]">
    select varbin from users
  </select>

</mapper>
